{% extends 'base_admin.html.twig' %}

{% block title %}
    tous les devis
{% endblock %}

{% block body %}
    <main class="p-5 w-100">
        <h1 class="mb-4">Cv Expert</h1>

        <table class="table text-white">
            <thead>
                <tr>
                    <th>Numéro de devis</th>
                    <th>Nom du projet</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for devis in devis %}
                    {% if devis.date_redaction %}
                        <tr>
                            <td>{{ devis.id }}</td>
                            <td>{{ devis.reference }}</td>
                            <td>
                                <a href="{{path('devis_pdf_admin',{id: devis.id})}}">Générer un pdf</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>{{ devis.id }}</td>
                            <td>{{ devis.reference }}</td>
                            <td>
                                <a href="{{path('devis_upload',{id: devis.id})}}">Voir le devis uploadé</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}