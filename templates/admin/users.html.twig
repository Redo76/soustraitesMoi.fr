{% extends 'base_admin.html.twig' %}

{% block title %}Projets en cours de validation
{% endblock %}

{% block body %}

<main class="p-5 w-100">
	<h1 class="mb-4">Projets en cours de validation</h1>

	<table class="table text-white">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>E-mail</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% for user in users %}

				<tr>
					<td>{{ user.firstname }}</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.email }}</td>
					<td>
						<div class="dropdown">
							<button class="btn" type="button" id="dropdownMenuButton{{user.id}}" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fa-solid fa-ellipsis"></i>
							</button>
							<div class="dropdown-menu  dropdown-menu-end" aria-labelledby="dropdownMenuButton{{user.id}}">

								<a class="dropdown-item" href="#">Voir l'utilisateur</a>
								<a class="dropdown-item text-warning" href="#">Modifier</a>
								{# {{ include('article_crud/_delete_form.html.twig') }} #}
							</div>
						</div>
					</td>
				</tr>
			</div>
		</tbody>
	</td>
	</tr>
    {% else %}
	<tr>
		<td colspan="7">Aucun utilisateur trouvé</td>
	</tr>
    {% endfor %}
    </tbody>
    </table>
</main>
{% endblock %}