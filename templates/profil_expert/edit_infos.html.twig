{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
	<main class="mt-4 p-lg-5 w-100 container-md home_container">
		<div class="d-flex flex-column gap-3 justify-content-around profil_card">
            {{ form_start(EditExpert) }}
            <h1>Mon profil</h1>
            <aside class="profil_picture edit p-2">
				<h4>Avatar</h4>
                <div class="d-flex align-items-center">
                    <img class="img-fluid" ({% if app.user.avatar %} 
											src="{{asset("assets/uploads/avatar/" ~  app.user.avatar)}}" 
											{% else %} src="{{asset("assets/uploads/avatar/default.png")}}") 
											{% endif %}  alt="Photo de profil">
					{{ form_row(EditExpert.avatar) }}
                </div>
            </aside>
			<div class=" w-100 p-2 p-lg-4">

				{# {% for message in app.flashes('success') %}
					<div class="alert alert-success mb-2">
						{{ message }}
					</div>
				{% endfor %} #}
				<h4>Informations personnelles</h4>
				<table class="table">
					<tbody>
						<tr>
                            <th>Prénom</th>
                            <td>{{ form_row(EditExpert.firstname) }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ form_row(EditExpert.lastname) }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ form_row(EditExpert.email) }}</td>
						</tr>
						<tr>
							<th>Téléphone</th>
							<td>{{ form_row(EditExpert.phone) }}</td>
						</tr>
					</tbody>

				</table>
				<h4>Adresse</h4>
				<table class="table">
					<tbody>
						<tr>
							<th>Adresse</th>
							<td>{{ form_row(EditExpert.address.address) }}</td>
						</tr>
						<tr>
							<th>Adresse ligne 2</th>
							<td>{{ form_row(EditExpert.address.address2) }}</td>
						</tr>
						<tr>
							<th>Ville</th>
							<td>{{ form_row(EditExpert.address.city) }}</td>
						</tr>
						<tr>
							<th>Code postal</th>
							<td>{{ form_row(EditExpert.address.codePostal) }}</td>
						</tr>
						<tr>
							<th>Pays</th>
							<td>{{ form_row(EditExpert.address.country) }}</td>
						</tr>
					</tbody>
				</table>
			</div>
            <div class="d-flex align-items-center justify-between">
                <button type="submit">Valider</button>
                {{ form_end(EditExpert) }}
            </div>
		</div>
	</main>
{% endblock %}