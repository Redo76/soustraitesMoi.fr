<header class="sticky">
    <div class="bande"></div>
    <aside>
        <div class="top">
            <p class="mb-0">SousTraitesMoi</p>
            <i class="fa-solid fa-xmark"></i>
        </div>
        {% if app.user %}
            <div class="profil_side">
                <div class="profil_pic">
                    {% if app.user.avatar %}
                        <img src="{{app.user.avatar}}" alt="Photo de profil">
                    {% else %}
                        <img src="{{asset("assets/uploads/avatar/default.png")}}" alt="Photo de profil par défaut">
                    {% endif %}
                </div>
                <div class="info">
                    <p class="mb-1">
                        {{app.user.lastName}} <br>
                        {{app.user.firstName}}
                    </p>
                    <p class="mb-0">
                        {% if is_granted('ROLE_EXPERT')  %}
                        Expert
                        {% elseif is_granted('ROLE_CLIENT')  %}
                        Client
                        {% else %}
                        Administrateur
                        {% endif %}
                    </p>            
                </div>
            </div>
        {% else %}
            <div class="login_side">
                <a href="#" class="button">Inscription</a>
                <div class="text-center">
                    <p class="mb-0 text-white">Déja Membres ?</p>
                    <a href="{{path('app_login')}}">Connectez-vous !</a>
                </div>
            </div>
        {% endif %}
        <ul class="nav d-flex flex-column align-center mb-2 mb-md-0">
            <li>
                <a href="#" class="nav-link px-2 text-white">
                    <i class="fa-regular fa-user"></i>
                    Utilisateur
                </a>
            </li>
            <li>
                <a href="#" class="nav-link px-2 text-white">
                    <i class="fa-regular fa-handshake"></i>
                    Nos Services
                </a>
            </li>
            <li>
                <a href="#" class="nav-link px-2 text-white">
                    <i class="fa-solid fa-euro-sign"></i>
                    Nos offres
                </a>
            </li>
        </ul>
    </aside>
    <div class="div_header">
        <div class="d-flex flex-wrap align-items-center justify-content-around justify-content-lg-start">
            <i class="fa-solid fa-bars"></i>
            <a href="{{path('app_home')}}" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                <img src="{{asset('assets/img/Soustraitesmoi_fr.webp')}}" alt="Logo SoustraitesMoi">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 link-secondary">Overview</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">Inventory</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">Customers</a></li>
