DANS ExpertController DANS public function editInfos RAJOUTER (sous le if uploadavatar):

$uploadedFile = $form['rib']->getData();
if ($uploadedFile) {
    $newFilename = $uploaderHelper->uploadRib($uploadedFile, $slugger);
    $user = $form->getData();
    $user->setrib($newFilename);
}

