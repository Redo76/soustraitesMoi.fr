A COLLER DANS ContactController

<?php

namespace App\Controller;

use App\Entity\Contact;
use App\Form\ContactType;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bridge\Twig\Mime\TemplatedEmail;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Annotation\Route;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\Mailer\MailerInterface;

class ContactController extends AbstractController
{
    #[Route('/contact', name: 'app_contact')]
    public function index(Request $request, EntityManagerInterface $manager, MailerInterface $mailer): Response
    {
        $contact = new Contact();

        // préremplir les champs nom, prenom, email si il y a un user connecté
        if ($this->getUser()) {
            $contact->setFirstName($this->getUser()->getFirstName())
                ->setLastName($this->getUser()->getLastName())
                ->setEmail($this->getUser()->getEmail());
        }

        $form = $this->createForm(ContactType::class, $contact);

        $form->handleRequest($request);
        if ($form->isSubmitted() && $form->isValid()) {
            $contact = $form->getData();

            $manager->persist($contact);
            $manager->flush();

            // envoi email
            $email = (new TemplatedEmail())
                ->from($contact->getEmail())
                ->to('soustraitesmoi@gmail.com')
                ->subject($contact->getSubject())
                ->htmlTemplate('contact/contact.html.twig')

                // pass variables (name => value) to the template
                ->context([
                    'contact' => $contact
                ]);

            $mailer->send($email);

            // message confirmation envoi
            $this->addFlash(
                'success',
                'votre demande a bien été envoyée'
            );
            return $this->redirectToRoute('app_contact');
        }
        return $this->render('contact/index.html.twig', [
            'form' => $form->createview(),
        ]);
    }
}

DANS TEMPLATE/CONTACT CREER NOUVEAU FICHIER contact.html.twig ET COLLER

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
	</head>
	<body>
		<h3>Vous avez reçu une demande de: </h3>
        <p>{{ contact.firstName }} {{ contact.lastName }}</p>
        <h3>Son adresse mail: </h3>
        <p>{{ contact.email }}</p>
        <h3>Sujet de la demande: </h3>
        <p>{{ contact.subject }}</p>
        <h3>Message:</h3>
        <div>
        {{ contact.message|raw }}
        </div>
	</body>
</html>

